<script>
    // Screenshot Carousel JavaScript
    (function() {
      let currentSlide = 0;
      let autoPlayInterval: ReturnType<typeof setInterval> | undefined;
      const slides = document.querySelectorAll('.screenshot-carousel-slide');
      const dots = document.querySelectorAll('.screenshot-dot');
      const totalSlides = slides.length;

      if (totalSlides === 0) return;

      function showSlide(index: number) {
        if (index >= totalSlides) currentSlide = 0;
        else if (index < 0) currentSlide = totalSlides - 1;
        else currentSlide = index;

        slides.forEach(slide => slide.classList.remove('active'));
        dots.forEach(dot => dot.classList.remove('active'));

        slides[currentSlide].classList.add('active');
        dots[currentSlide].classList.add('active');
      }

      function nextSlide() {
        showSlide(currentSlide + 1);
        resetAutoPlay();
      }

      function prevSlide() {
        showSlide(currentSlide - 1);
        resetAutoPlay();
      }

      function goToSlide(index: number) {
        showSlide(index);
        resetAutoPlay();
      }

      function resetAutoPlay() {
        clearInterval(autoPlayInterval);
        startAutoPlay();
      }

      function startAutoPlay() {
        autoPlayInterval = setInterval(() => {
          showSlide(currentSlide + 1);
        }, 4000); // 4 seconds per slide
      }

      // Initialize carousel
      showSlide(0);
      startAutoPlay();

      // Event listeners for buttons
      document.querySelector('.screenshot-carousel-btn-prev')?.addEventListener('click', prevSlide);
      document.querySelector('.screenshot-carousel-btn-next')?.addEventListener('click', nextSlide);

      // Event listeners for dots
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => goToSlide(index));
      });

      // Pause autoplay when user hovers over carousel
      const carouselContainer = document.querySelector('.screenshot-carousel-container');
      if (carouselContainer) {
        carouselContainer.addEventListener('mouseenter', () => {
          clearInterval(autoPlayInterval);
        });
        carouselContainer.addEventListener('mouseleave', () => {
          startAutoPlay();
        });
      }
    })();
  </script>
