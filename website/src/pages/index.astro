---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/landing/Header.astro';
import Hero from '../components/landing/Hero.astro';
import Installation from '../components/landing/Installation.astro';
import BentoGrid from '../components/landing/BentoGrid.astro';
import VisualDemo from '../components/landing/VisualDemo.astro';
import Footer from '../components/landing/Footer.astro';
import { FadeIn } from '../components/ui/Motion';

const title = "SuperLocalMemory V2 - The Privacy-First AI Memory Layer";
const description = "Give your LLMs long-term memory without sending data to the cloud. 100% local, open-source, and privacy-focused.";
---

<BaseLayout title={title} description={description}>
  <Header />
  
  <main class="relative z-10 bg-[var(--color-bg-main)]">
    <Hero />
    
    <Installation />

    <div id="features">
      <BentoGrid />
    </div>

    <VisualDemo />
    
    <!-- Comparison / CTA Section -->
    <section class="py-24 relative overflow-hidden">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--color-primary)_0%,_transparent_70%)] opacity-10 pointer-events-none"></div>
        <div class="container-custom text-center relative z-10">
            <FadeIn client:visible>
                <h2 class="text-4xl md:text-5xl font-bold mb-8">
                    Stop Leaking Context. <br/>
                    <span class="text-gradient">Start Building Intelligence.</span>
                </h2>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="https://github.com/varun369/SuperLocalMemoryV2" target="_blank" rel="noopener noreferrer" 
                       class="px-8 py-4 rounded-full bg-white text-black font-bold hover:scale-105 transition-transform shadow-[0_0_20px_rgba(255,255,255,0.3)]">
                        Get Started for Free
                    </a>
                    <a href="/architecture" 
                       class="px-8 py-4 rounded-full border border-white/20 hover:bg-white/5 transition-colors">
                        View Architecture
                    </a>
                </div>
            </FadeIn>
        </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
