---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/landing/Header.astro';
import Footer from '../components/landing/Footer.astro';
import BreadcrumbSchema from '../components/seo/BreadcrumbSchema.astro';
import { FadeIn } from '../components/ui/Motion';
import { Shield, HardDrive, Lock, Eye, Server, FileCheck } from 'lucide-react';

const title = "Security & Privacy | SuperLocalMemory";
const description = "SuperLocalMemory is private by design. All data stays on your machine. No cloud, no telemetry, no tracking. Built for enterprise-grade privacy.";
---

<BaseLayout title={title} description={description} schemaType="WebPage" keywords="AI memory privacy, local AI security, GDPR AI memory, private AI tools, enterprise AI security">
  <Header />

  <main class="pt-32 pb-24 min-h-screen bg-[var(--color-bg-main)]">
    <div class="container-custom max-w-4xl">

      <BreadcrumbSchema items={[
        { name: 'Home', url: 'https://superlocalmemory.com' },
        { name: 'Security', url: 'https://superlocalmemory.com/security' }
      ]} />

      <FadeIn client:load>
        <div class="text-center mb-16">
          <span class="text-[var(--color-primary)] font-mono text-sm tracking-wider uppercase mb-4 block">Security</span>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Private by Design</h1>
          <p class="text-xl text-[var(--color-text-muted)] max-w-2xl mx-auto">
            Your memories, your machine, your control. SuperLocalMemory never sends data anywhere.
          </p>
        </div>
      </FadeIn>

      <div class="grid md:grid-cols-2 gap-6 mb-16">
        {[
          {
            icon: HardDrive,
            title: "100% Local Storage",
            desc: "All data is stored in a single SQLite file on your machine. No cloud databases, no remote servers, no external storage."
          },
          {
            icon: Lock,
            title: "Zero API Keys Required",
            desc: "SuperLocalMemory uses embedded ONNX models for semantic search. No OpenAI, no Anthropic, no external API calls for core functionality."
          },
          {
            icon: Eye,
            title: "No Telemetry",
            desc: "We collect zero usage data, zero analytics, zero crash reports from the tool itself. What happens on your machine stays on your machine."
          },
          {
            icon: Server,
            title: "No Network Calls",
            desc: "The memory system operates entirely offline. It works on air-gapped machines, in secure environments, and behind corporate firewalls."
          },
          {
            icon: Shield,
            title: "Enterprise Ready",
            desc: "Suitable for regulated environments where code context cannot leave the organization. No data processor agreements needed â€” there is no processor."
          },
          {
            icon: FileCheck,
            title: "Open Source (MIT License)",
            desc: "Full source code is public and auditable. Verify every line. No hidden data collection, no obfuscated network calls."
          }
        ].map((item, i) => (
          <FadeIn client:visible delay={i * 0.05}>
            <div class="p-6 rounded-xl bg-white/5 border border-white/10 h-full">
              <item.icon className="w-8 h-8 text-[var(--color-primary)] mb-4" />
              <h3 class="text-lg font-semibold text-white mb-2">{item.title}</h3>
              <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">{item.desc}</p>
            </div>
          </FadeIn>
        ))}
      </div>

      <FadeIn client:visible delay={0.3}>
        <div class="rounded-2xl bg-white/5 border border-white/10 p-8 mb-16">
          <h2 class="text-2xl font-bold text-white mb-6">Data Architecture</h2>
          <div class="space-y-4 text-[var(--color-text-muted)]">
            <div class="flex gap-4">
              <span class="font-mono text-sm text-[var(--color-primary)] shrink-0 w-32">Storage</span>
              <span>Single SQLite file (~/.claude-memory/memory.db). Portable, backupable, deletable.</span>
            </div>
            <div class="flex gap-4">
              <span class="font-mono text-sm text-[var(--color-primary)] shrink-0 w-32">Embeddings</span>
              <span>Local ONNX model for semantic vectors. No API calls for search or retrieval.</span>
            </div>
            <div class="flex gap-4">
              <span class="font-mono text-sm text-[var(--color-primary)] shrink-0 w-32">Learning</span>
              <span>Local LightGBM model in learning.db. Behavioral data is isolated and never exported.</span>
            </div>
            <div class="flex gap-4">
              <span class="font-mono text-sm text-[var(--color-primary)] shrink-0 w-32">MCP Transport</span>
              <span>stdio-only. No HTTP server, no network ports, no remote connections.</span>
            </div>
            <div class="flex gap-4">
              <span class="font-mono text-sm text-[var(--color-primary)] shrink-0 w-32">Deletion</span>
              <span>Delete the SQLite files and all data is gone. No cloud residue, no backup servers to purge.</span>
            </div>
          </div>
        </div>
      </FadeIn>

      <FadeIn client:visible delay={0.4}>
        <div class="text-center">
          <h2 class="text-2xl font-bold text-white mb-4">Compare Privacy Models</h2>
          <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
              <thead>
                <tr class="border-b border-white/10">
                  <th class="py-3 pr-4 text-[var(--color-text-muted)] font-medium">Feature</th>
                  <th class="py-3 px-4 text-[var(--color-primary)] font-semibold">SuperLocalMemory</th>
                  <th class="py-3 px-4 text-[var(--color-text-muted)] font-medium">Mem0</th>
                  <th class="py-3 px-4 text-[var(--color-text-muted)] font-medium">Zep</th>
                </tr>
              </thead>
              <tbody class="text-[var(--color-text-muted)]">
                {[
                  ["Data location", "Your machine only", "Their cloud", "Their cloud"],
                  ["API keys needed", "None", "OpenAI + Mem0", "Zep cloud key"],
                  ["Works offline", "Yes", "No", "No"],
                  ["Network calls", "Zero", "Every operation", "Every operation"],
                  ["Open source", "Full (MIT)", "Partial", "Partial (Graphiti)"],
                  ["Self-hosted option", "Default", "Not available", "Enterprise only"],
                  ["Price", "Free forever", "$19-249/mo", "Credit-based"],
                ].map(([feature, slm, mem0, zep]) => (
                  <tr class="border-b border-white/5">
                    <td class="py-3 pr-4 font-medium text-white">{feature}</td>
                    <td class="py-3 px-4 text-[var(--color-primary)]">{slm}</td>
                    <td class="py-3 px-4">{mem0}</td>
                    <td class="py-3 px-4">{zep}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </FadeIn>

    </div>
  </main>

  <Footer />
</BaseLayout>
