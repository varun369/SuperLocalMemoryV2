---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/landing/Header.astro';
import Footer from '../../components/landing/Footer.astro';
import BreadcrumbSchema from '../../components/seo/BreadcrumbSchema.astro';
import FAQSchema from '../../components/seo/FAQSchema.astro';
import { FadeIn } from '../../components/ui/Motion';
import { Terminal, Brain, Zap, Shield, Clock, ArrowRight, Check, Layers } from 'lucide-react';

const title = "SuperLocalMemory for Claude Code — Persistent AI Memory";
const description = "Give Claude Code persistent memory across sessions. Free, local-first, installs in one command. Your AI remembers your project context, preferences, and decisions.";
const keywords = "Claude Code memory, Claude Code persistent memory, Claude Code MCP, Claude Code context, Claude Code remember, AI memory Claude Code, MCP server Claude Code";

const faqs = [
  {
    question: "How do I add persistent memory to Claude Code?",
    answer: "Install SuperLocalMemory with 'npx superlocalmemory@latest init', then add the MCP configuration to your Claude Code settings. It takes under 5 minutes and requires no API keys."
  },
  {
    question: "Does SuperLocalMemory send my code to the cloud?",
    answer: "No. SuperLocalMemory is 100% local. All data stays in a SQLite file on your machine. Zero network calls, zero telemetry, zero cloud dependency."
  },
  {
    question: "Is SuperLocalMemory free for Claude Code?",
    answer: "Yes, completely free and open source under the MIT license. No subscriptions, no API costs, no usage limits."
  },
  {
    question: "Does it work across Claude Code sessions?",
    answer: "Yes. SuperLocalMemory persists memories in a local SQLite database. When you start a new Claude Code session, all previous context, decisions, and preferences are available instantly."
  },
  {
    question: "Can I use the same memory with Cursor and other AI tools?",
    answer: "Yes. SuperLocalMemory uses the MCP protocol, which means the same memory database works across Claude Code, Cursor, Windsurf, VS Code, ChatGPT Desktop, and 17+ other AI tools."
  }
];

const features = [
  {
    icon: Brain,
    title: "Cross-Session Memory",
    desc: "Claude Code remembers your architecture decisions, naming conventions, and project context across every session. No more repeating yourself."
  },
  {
    icon: Clock,
    title: "5-Minute Setup",
    desc: "One command to install, one config to add. SuperLocalMemory is running in Claude Code in under 5 minutes."
  },
  {
    icon: Shield,
    title: "100% Local & Private",
    desc: "Your code context never leaves your machine. No cloud APIs, no telemetry, no third-party servers. Works air-gapped."
  },
  {
    icon: Layers,
    title: "Knowledge Graphs",
    desc: "Builds relationships between concepts, files, and decisions. Claude Code understands how parts of your codebase connect."
  },
  {
    icon: Zap,
    title: "Sub-10ms Recall",
    desc: "Local SQLite with hybrid search means instant memory retrieval. No network latency, no API rate limits."
  },
  {
    icon: Terminal,
    title: "MCP Native",
    desc: "Built on the Model Context Protocol. No custom integrations or API wrappers — Claude Code speaks MCP natively."
  }
];
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  schemaType="SoftwareApplication"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "SuperLocalMemory for Claude Code",
      "description": description,
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": "macOS, Linux, Windows",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "softwareVersion": "2.7.5",
      "author": {
        "@type": "Person",
        "name": "Varun Pratap Bhardwaj"
      }
    })} />
  </Fragment>

  <Header />
  <FAQSchema faqs={faqs} />

  <main class="pt-32 pb-24 min-h-screen bg-[var(--color-bg-main)]">
    <div class="container-custom max-w-5xl">

      <BreadcrumbSchema items={[
        { name: 'Home', url: 'https://superlocalmemory.com' },
        { name: 'Integrations', url: 'https://superlocalmemory.com/integrations/claude-code' },
        { name: 'Claude Code', url: 'https://superlocalmemory.com/integrations/claude-code' }
      ]} />

      <!-- Hero -->
      <FadeIn client:load>
        <div class="text-center mb-20">
          <span class="text-[var(--color-primary)] font-mono text-sm tracking-wider uppercase mb-4 block">Integration</span>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            Claude Code <span class="text-gradient">Persistent Memory</span>
          </h1>
          <p class="text-xl text-[var(--color-text-muted)] max-w-2xl mx-auto mb-8">
            Give Claude Code long-term memory that persists across sessions. Free, local, private. Your AI finally remembers your project.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="#quickstart" class="px-8 py-4 rounded-full bg-[var(--color-primary)] text-black font-bold hover:scale-105 transition-transform shadow-[0_0_20px_rgba(56,189,248,0.3)]">
              Quick Start Guide
            </a>
            <a href="/blog/claude-code-memory-guide" class="px-8 py-4 rounded-full border border-white/20 hover:bg-white/5 transition-colors">
              Read Full Tutorial
            </a>
          </div>
        </div>
      </FadeIn>

      <!-- The Problem -->
      <FadeIn client:visible delay={0.1}>
        <div class="rounded-2xl bg-white/5 border border-white/10 p-8 md:p-12 mb-16">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">The Problem Every Claude Code User Hits</h2>
          <div class="space-y-4 text-[var(--color-text-muted)] text-lg leading-relaxed">
            <p>
              You spend 20 minutes explaining your project architecture to Claude Code. Your folder structure, your naming conventions, the reason you picked one ORM over another.
            </p>
            <p>
              Next session: <strong class="text-white">blank slate.</strong> Claude Code does not remember any of it.
            </p>
            <p>
              Over a week, re-establishing context costs <strong class="text-white">hours of productivity.</strong> Over a month, it is a measurable drag on shipping velocity.
            </p>
            <p class="text-[var(--color-primary)] font-semibold">
              SuperLocalMemory fixes this permanently. One install. Persistent memory. Every session.
            </p>
          </div>
        </div>
      </FadeIn>

      <!-- Quick Start -->
      <div id="quickstart">
        <FadeIn client:visible delay={0.15}>
          <div class="mb-16">
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 text-center">Set Up Claude Code Memory in 3 Steps</h2>

            <div class="space-y-6">
              <!-- Step 1 -->
              <div class="rounded-xl bg-white/5 border border-white/10 p-6">
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-full bg-[var(--color-primary)]/10 border border-[var(--color-primary)]/20 flex items-center justify-center shrink-0">
                    <span class="text-[var(--color-primary)] font-bold text-sm">1</span>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-white mb-3">Install SuperLocalMemory</h3>
                    <div class="bg-black/50 rounded-lg border border-white/10 p-4 font-mono text-sm">
                      <span class="text-[var(--color-text-muted)]">$</span> <span class="text-[var(--color-primary)]">npx</span> superlocalmemory@latest init
                    </div>
                    <p class="text-sm text-[var(--color-text-muted)] mt-3">This downloads the package, creates the SQLite database, and sets up default configuration. No API keys needed.</p>
                  </div>
                </div>
              </div>

              <!-- Step 2 -->
              <div class="rounded-xl bg-white/5 border border-white/10 p-6">
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-full bg-[var(--color-primary)]/10 border border-[var(--color-primary)]/20 flex items-center justify-center shrink-0">
                    <span class="text-[var(--color-primary)] font-bold text-sm">2</span>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-white mb-3">Add the MCP Configuration</h3>
                    <p class="text-sm text-[var(--color-text-muted)] mb-3">Add this to your Claude Code MCP settings file (<code class="bg-white/10 px-1.5 py-0.5 rounded text-xs">~/.claude/claude_desktop_config.json</code>):</p>
                    <div class="bg-black/50 rounded-lg border border-white/10 p-4 font-mono text-sm overflow-x-auto">
                      <pre class="text-[var(--color-text-muted)]"><code>{`{
  "mcpServers": {
    "superlocalmemory": {
      "command": "npx",
      "args": ["-y", "superlocalmemory@latest"],
      "env": {}
    }
  }
}`}</code></pre>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Step 3 -->
              <div class="rounded-xl bg-white/5 border border-white/10 p-6">
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-full bg-[var(--color-primary)]/10 border border-[var(--color-primary)]/20 flex items-center justify-center shrink-0">
                    <span class="text-[var(--color-primary)] font-bold text-sm">3</span>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-white mb-3">Start Using Memory</h3>
                    <div class="bg-black/50 rounded-lg border border-white/10 p-4 font-mono text-sm space-y-2">
                      <div><span class="text-[var(--color-text-muted)]">$</span> <span class="text-green-400">slm remember</span> <span class="text-[var(--color-text-muted)]">"This project uses Drizzle ORM with PostgreSQL"</span></div>
                      <div><span class="text-[var(--color-text-muted)]">$</span> <span class="text-green-400">slm recall</span> <span class="text-[var(--color-text-muted)]">"database setup"</span></div>
                    </div>
                    <p class="text-sm text-[var(--color-text-muted)] mt-3">Claude Code now has persistent memory. It recalls your context automatically at the start of every session.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </FadeIn>
      </div>

      <!-- Features Grid -->
      <FadeIn client:visible delay={0.2}>
        <div class="mb-16">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 text-center">What Claude Code Memory Gets You</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {features.map((item, i) => (
              <div class="p-6 rounded-xl bg-white/5 border border-white/10 hover:border-[var(--color-primary)]/30 transition-colors">
                <item.icon className="w-8 h-8 text-[var(--color-primary)] mb-4" />
                <h3 class="text-lg font-semibold text-white mb-2">{item.title}</h3>
                <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">{item.desc}</p>
              </div>
            ))}
          </div>
        </div>
      </FadeIn>

      <!-- Use Cases -->
      <FadeIn client:visible delay={0.25}>
        <div class="rounded-2xl bg-white/5 border border-white/10 p-8 md:p-12 mb-16">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-8">What Claude Code Remembers</h2>
          <div class="grid md:grid-cols-2 gap-6">
            {[
              { title: "Project Architecture", desc: "Folder structure, module boundaries, dependency choices, and why they were made." },
              { title: "Code Conventions", desc: "Naming patterns, formatting preferences, TypeScript strictness levels, import ordering." },
              { title: "Environment Details", desc: "Database ports, API endpoints, environment variable requirements, deployment targets." },
              { title: "Past Decisions", desc: "Why you chose one library over another, trade-offs discussed, bugs already fixed." },
              { title: "Team Patterns", desc: "PR conventions, branch naming, testing requirements, code review preferences." },
              { title: "Debug Context", desc: "Known issues, workarounds, edge cases that were previously investigated." }
            ].map(item => (
              <div class="flex items-start gap-3">
                <Check className="w-5 h-5 text-[var(--color-primary)] shrink-0 mt-1" />
                <div>
                  <h3 class="font-semibold text-white mb-1">{item.title}</h3>
                  <p class="text-sm text-[var(--color-text-muted)]">{item.desc}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </FadeIn>

      <!-- FAQ Section -->
      <FadeIn client:visible delay={0.3}>
        <div class="mb-16">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 text-center">Frequently Asked Questions</h2>
          <div class="space-y-4">
            {faqs.map(faq => (
              <details class="group rounded-xl bg-white/5 border border-white/10 overflow-hidden">
                <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-white/5 transition-colors">
                  <h3 class="font-semibold text-white pr-4">{faq.question}</h3>
                  <span class="text-[var(--color-primary)] shrink-0 transition-transform group-open:rotate-45 text-xl">+</span>
                </summary>
                <div class="px-6 pb-6 text-[var(--color-text-muted)] leading-relaxed">
                  {faq.answer}
                </div>
              </details>
            ))}
          </div>
        </div>
      </FadeIn>

      <!-- Cross-links -->
      <FadeIn client:visible delay={0.35}>
        <div class="text-center mb-16">
          <h2 class="text-2xl font-bold text-white mb-6">Works With Your Entire AI Toolkit</h2>
          <p class="text-[var(--color-text-muted)] mb-8 max-w-xl mx-auto">
            The same memory database works across all MCP-compatible tools. Set up once, remember everywhere.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/integrations/cursor" class="px-6 py-3 rounded-xl bg-white/5 border border-white/10 hover:border-[var(--color-primary)]/30 transition-colors text-white font-medium inline-flex items-center gap-2">
              Cursor Integration <ArrowRight className="w-4 h-4" />
            </a>
            <a href="/integrations/chatgpt" class="px-6 py-3 rounded-xl bg-white/5 border border-white/10 hover:border-[var(--color-primary)]/30 transition-colors text-white font-medium inline-flex items-center gap-2">
              ChatGPT Desktop <ArrowRight className="w-4 h-4" />
            </a>
          </div>
        </div>
      </FadeIn>

      <!-- Bottom CTA -->
      <FadeIn client:visible delay={0.4}>
        <div class="text-center glass-panel p-12 rounded-3xl border border-[var(--color-primary)]/20 bg-gradient-to-b from-[var(--color-bg-secondary)] to-[var(--color-bg-main)]">
          <h2 class="text-3xl font-bold mb-4">Give Claude Code Memory Today</h2>
          <p class="text-[var(--color-text-muted)] mb-8 text-lg max-w-xl mx-auto">
            Free, local, private. One command to install. Your AI finally remembers you.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="https://www.npmjs.com/package/superlocalmemory" target="_blank" rel="noopener noreferrer"
               class="px-8 py-4 rounded-full bg-[var(--color-primary)] text-black font-bold hover:scale-105 transition-transform shadow-[0_0_20px_rgba(56,189,248,0.3)]">
              npm install superlocalmemory
            </a>
            <a href="/comparison" class="px-8 py-4 rounded-full border border-white/20 hover:bg-white/5 transition-colors">
              Compare Alternatives
            </a>
          </div>
        </div>
      </FadeIn>

    </div>
  </main>

  <Footer />
</BaseLayout>
