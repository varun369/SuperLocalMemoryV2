---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/landing/Header.astro';
import Footer from '../../components/landing/Footer.astro';
import BreadcrumbSchema from '../../components/seo/BreadcrumbSchema.astro';
import FAQSchema from '../../components/seo/FAQSchema.astro';
import { FadeIn } from '../../components/ui/Motion';
import { Brain, Zap, Shield, Clock, ArrowRight, Check, Code2, FolderSync, Layers } from 'lucide-react';

const title = "SuperLocalMemory for Cursor — AI Memory That Persists";
const description = "Add persistent memory to Cursor IDE. Your AI assistant remembers project context, code patterns, and architecture decisions across every session. Free and local.";
const keywords = "Cursor AI memory, Cursor persistent memory, Cursor MCP, Cursor context memory, Cursor IDE memory, AI memory Cursor, Cursor remember context";

const faqs = [
  {
    question: "How do I add persistent memory to Cursor?",
    answer: "Install SuperLocalMemory with 'npx superlocalmemory@latest init', then add the MCP server configuration to Cursor's settings. The entire setup takes under 5 minutes."
  },
  {
    question: "Does Cursor support MCP servers?",
    answer: "Yes. Cursor has native MCP support. SuperLocalMemory connects as an MCP server, which means Cursor can read and write memories directly during your coding sessions."
  },
  {
    question: "Will my Cursor memories work in Claude Code too?",
    answer: "Yes. SuperLocalMemory stores all memories in a shared local SQLite database. Any MCP-compatible tool — Cursor, Claude Code, Windsurf, VS Code, and more — can access the same memory."
  },
  {
    question: "Is there any performance impact on Cursor?",
    answer: "No noticeable impact. Memory recall takes under 10ms since it runs locally against a SQLite database. There are no network calls or API latency."
  },
  {
    question: "Is SuperLocalMemory free for Cursor?",
    answer: "Yes, completely free and open source under the MIT license. No subscriptions, no API keys, no usage limits."
  }
];

const features = [
  {
    icon: Brain,
    title: "Project-Wide Memory",
    desc: "Cursor remembers your entire project context — architecture decisions, module boundaries, dependency choices, and coding conventions."
  },
  {
    icon: FolderSync,
    title: "Cross-Tool Continuity",
    desc: "Context from Cursor carries over to Claude Code, Windsurf, and ChatGPT Desktop. One memory, every tool."
  },
  {
    icon: Shield,
    title: "Private by Design",
    desc: "All memories stay in a local SQLite file. Your proprietary code patterns never leave your machine."
  },
  {
    icon: Layers,
    title: "Knowledge Graphs",
    desc: "Builds semantic relationships between your code concepts. Cursor understands how components, APIs, and modules connect."
  },
  {
    icon: Zap,
    title: "Instant Recall",
    desc: "Sub-10ms memory retrieval from local storage. No API calls, no rate limits, no waiting for cloud responses."
  },
  {
    icon: Code2,
    title: "Pattern Learning",
    desc: "Learns your coding patterns and preferences over time. Cursor gets better at suggesting code that matches your style."
  }
];
---

<BaseLayout
  title={title}
  description={description}
  keywords={keywords}
  schemaType="SoftwareApplication"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "SuperLocalMemory for Cursor",
      "description": description,
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": "macOS, Linux, Windows",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "softwareVersion": "2.7.5",
      "author": {
        "@type": "Person",
        "name": "Varun Pratap Bhardwaj"
      }
    })} />
  </Fragment>

  <Header />
  <FAQSchema faqs={faqs} />

  <main class="pt-32 pb-24 min-h-screen bg-[var(--color-bg-main)]">
    <div class="container-custom max-w-5xl">

      <BreadcrumbSchema items={[
        { name: 'Home', url: 'https://superlocalmemory.com' },
        { name: 'Integrations', url: 'https://superlocalmemory.com/integrations/claude-code' },
        { name: 'Cursor', url: 'https://superlocalmemory.com/integrations/cursor' }
      ]} />

      <!-- Hero -->
      <FadeIn client:load>
        <div class="text-center mb-20">
          <span class="text-[var(--color-primary)] font-mono text-sm tracking-wider uppercase mb-4 block">Integration</span>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            Cursor AI <span class="text-gradient">Persistent Memory</span>
          </h1>
          <p class="text-xl text-[var(--color-text-muted)] max-w-2xl mx-auto mb-8">
            Stop re-explaining your codebase every session. Give Cursor long-term memory that persists, learns, and grows with your project.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="#quickstart" class="px-8 py-4 rounded-full bg-[var(--color-primary)] text-black font-bold hover:scale-105 transition-transform shadow-[0_0_20px_rgba(56,189,248,0.3)]">
              Quick Start Guide
            </a>
            <a href="/docs" class="px-8 py-4 rounded-full border border-white/20 hover:bg-white/5 transition-colors">
              Full Documentation
            </a>
          </div>
        </div>
      </FadeIn>

      <!-- The Problem -->
      <FadeIn client:visible delay={0.1}>
        <div class="rounded-2xl bg-white/5 border border-white/10 p-8 md:p-12 mb-16">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">Cursor Is Intelligent. But It Forgets.</h2>
          <div class="space-y-4 text-[var(--color-text-muted)] text-lg leading-relaxed">
            <p>
              Cursor's AI is excellent at understanding code in the current session. But close the IDE and open it tomorrow — <strong class="text-white">the context resets.</strong>
            </p>
            <p>
              Your project uses a specific folder convention. You have architectural rules about where business logic lives versus infrastructure code. You made a deliberate decision last week about your API versioning strategy.
            </p>
            <p>
              Without persistent memory, you re-explain these decisions <strong class="text-white">every single session.</strong> SuperLocalMemory gives Cursor a permanent memory layer so it accumulates project knowledge over time.
            </p>
          </div>
        </div>
      </FadeIn>

      <!-- Quick Start -->
      <div id="quickstart">
        <FadeIn client:visible delay={0.15}>
          <div class="mb-16">
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 text-center">Set Up Cursor Memory in 3 Steps</h2>

            <div class="space-y-6">
              <!-- Step 1 -->
              <div class="rounded-xl bg-white/5 border border-white/10 p-6">
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-full bg-[var(--color-primary)]/10 border border-[var(--color-primary)]/20 flex items-center justify-center shrink-0">
                    <span class="text-[var(--color-primary)] font-bold text-sm">1</span>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-white mb-3">Install SuperLocalMemory</h3>
                    <div class="bg-black/50 rounded-lg border border-white/10 p-4 font-mono text-sm">
                      <span class="text-[var(--color-text-muted)]">$</span> <span class="text-[var(--color-primary)]">npx</span> superlocalmemory@latest init
                    </div>
                    <p class="text-sm text-[var(--color-text-muted)] mt-3">Sets up the local SQLite database and default configuration. No API keys needed.</p>
                  </div>
                </div>
              </div>

              <!-- Step 2 -->
              <div class="rounded-xl bg-white/5 border border-white/10 p-6">
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-full bg-[var(--color-primary)]/10 border border-[var(--color-primary)]/20 flex items-center justify-center shrink-0">
                    <span class="text-[var(--color-primary)] font-bold text-sm">2</span>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-white mb-3">Add MCP Configuration in Cursor</h3>
                    <p class="text-sm text-[var(--color-text-muted)] mb-3">Open Cursor Settings, navigate to the MCP section, and add SuperLocalMemory as a server:</p>
                    <div class="bg-black/50 rounded-lg border border-white/10 p-4 font-mono text-sm overflow-x-auto">
                      <pre class="text-[var(--color-text-muted)]"><code>{`{
  "mcpServers": {
    "superlocalmemory": {
      "command": "npx",
      "args": ["-y", "superlocalmemory@latest"],
      "env": {}
    }
  }
}`}</code></pre>
                    </div>
                    <p class="text-sm text-[var(--color-text-muted)] mt-3">In Cursor, go to <strong class="text-white">Settings &gt; MCP Servers</strong> and add this configuration.</p>
                  </div>
                </div>
              </div>

              <!-- Step 3 -->
              <div class="rounded-xl bg-white/5 border border-white/10 p-6">
                <div class="flex items-start gap-4">
                  <div class="w-10 h-10 rounded-full bg-[var(--color-primary)]/10 border border-[var(--color-primary)]/20 flex items-center justify-center shrink-0">
                    <span class="text-[var(--color-primary)] font-bold text-sm">3</span>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-white mb-3">Start Building With Memory</h3>
                    <p class="text-sm text-[var(--color-text-muted)] mb-3">Cursor now has access to memory tools. Memories persist across sessions automatically.</p>
                    <div class="bg-black/50 rounded-lg border border-white/10 p-4 font-mono text-sm space-y-2">
                      <div><span class="text-[var(--color-text-muted)]"># Store project context</span></div>
                      <div><span class="text-green-400">slm remember</span> <span class="text-[var(--color-text-muted)]">"Frontend uses Next.js App Router with server components"</span></div>
                      <div class="mt-2"><span class="text-[var(--color-text-muted)]"># Recall in any future session</span></div>
                      <div><span class="text-green-400">slm recall</span> <span class="text-[var(--color-text-muted)]">"frontend architecture"</span></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </FadeIn>
      </div>

      <!-- Features Grid -->
      <FadeIn client:visible delay={0.2}>
        <div class="mb-16">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 text-center">What Cursor Memory Unlocks</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {features.map((item, i) => (
              <div class="p-6 rounded-xl bg-white/5 border border-white/10 hover:border-[var(--color-primary)]/30 transition-colors">
                <item.icon className="w-8 h-8 text-[var(--color-primary)] mb-4" />
                <h3 class="text-lg font-semibold text-white mb-2">{item.title}</h3>
                <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">{item.desc}</p>
              </div>
            ))}
          </div>
        </div>
      </FadeIn>

      <!-- Why Local Matters for Cursor -->
      <FadeIn client:visible delay={0.25}>
        <div class="rounded-2xl bg-white/5 border border-white/10 p-8 md:p-12 mb-16">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-6">Why Local Memory Matters for Cursor Users</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-semibold text-white mb-3">Your Code Stays Private</h3>
              <p class="text-[var(--color-text-muted)] leading-relaxed">
                Cursor already sends code to AI providers for completions. Memory should not add another data pipeline. SuperLocalMemory keeps all project context on your machine — no additional cloud exposure.
              </p>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-white mb-3">Works Offline</h3>
              <p class="text-[var(--color-text-muted)] leading-relaxed">
                Memory retrieval is instant and works without internet. Even if your connection drops, Cursor still has full access to your accumulated project knowledge.
              </p>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-white mb-3">No Vendor Lock-in</h3>
              <p class="text-[var(--color-text-muted)] leading-relaxed">
                If you switch from Cursor to Windsurf, or use Claude Code for certain tasks, your memories come with you. One database, every tool.
              </p>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-white mb-3">Zero Ongoing Cost</h3>
              <p class="text-[var(--color-text-muted)] leading-relaxed">
                No API fees, no subscription tiers, no credit-based pricing. SuperLocalMemory is free and open source. The architecture is local — there are no servers to pay for.
              </p>
            </div>
          </div>
        </div>
      </FadeIn>

      <!-- FAQ Section -->
      <FadeIn client:visible delay={0.3}>
        <div class="mb-16">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 text-center">Frequently Asked Questions</h2>
          <div class="space-y-4">
            {faqs.map(faq => (
              <details class="group rounded-xl bg-white/5 border border-white/10 overflow-hidden">
                <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-white/5 transition-colors">
                  <h3 class="font-semibold text-white pr-4">{faq.question}</h3>
                  <span class="text-[var(--color-primary)] shrink-0 transition-transform group-open:rotate-45 text-xl">+</span>
                </summary>
                <div class="px-6 pb-6 text-[var(--color-text-muted)] leading-relaxed">
                  {faq.answer}
                </div>
              </details>
            ))}
          </div>
        </div>
      </FadeIn>

      <!-- Cross-links -->
      <FadeIn client:visible delay={0.35}>
        <div class="text-center mb-16">
          <h2 class="text-2xl font-bold text-white mb-6">Also Works With</h2>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/integrations/claude-code" class="px-6 py-3 rounded-xl bg-white/5 border border-white/10 hover:border-[var(--color-primary)]/30 transition-colors text-white font-medium inline-flex items-center gap-2">
              Claude Code <ArrowRight className="w-4 h-4" />
            </a>
            <a href="/integrations/chatgpt" class="px-6 py-3 rounded-xl bg-white/5 border border-white/10 hover:border-[var(--color-primary)]/30 transition-colors text-white font-medium inline-flex items-center gap-2">
              ChatGPT Desktop <ArrowRight className="w-4 h-4" />
            </a>
          </div>
        </div>
      </FadeIn>

      <!-- Bottom CTA -->
      <FadeIn client:visible delay={0.4}>
        <div class="text-center glass-panel p-12 rounded-3xl border border-[var(--color-primary)]/20 bg-gradient-to-b from-[var(--color-bg-secondary)] to-[var(--color-bg-main)]">
          <h2 class="text-3xl font-bold mb-4">Give Cursor Persistent Memory</h2>
          <p class="text-[var(--color-text-muted)] mb-8 text-lg max-w-xl mx-auto">
            Free, local, private. Works across 17+ AI tools. Install in one command.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="https://www.npmjs.com/package/superlocalmemory" target="_blank" rel="noopener noreferrer"
               class="px-8 py-4 rounded-full bg-[var(--color-primary)] text-black font-bold hover:scale-105 transition-transform shadow-[0_0_20px_rgba(56,189,248,0.3)]">
              npm install superlocalmemory
            </a>
            <a href="/comparison" class="px-8 py-4 rounded-full border border-white/20 hover:bg-white/5 transition-colors">
              Compare Alternatives
            </a>
          </div>
        </div>
      </FadeIn>

    </div>
  </main>

  <Footer />
</BaseLayout>
