---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/landing/Header.astro';
import Footer from '../components/landing/Footer.astro';
import BreadcrumbSchema from '../components/seo/BreadcrumbSchema.astro';
import FAQSchema from '../components/seo/FAQSchema.astro';
import { FadeIn } from '../components/ui/Motion';
import { Check, X, Shield, Zap, DollarSign, Server, Lock } from 'lucide-react';

const title = "SuperLocalMemory vs Mem0, Zep & Alternatives — Free Local AI Memory";
const description = "Compare SuperLocalMemory V2 against Mem0, Zep, Pinecone, and ChatGPT Memory. The free, open-source, local-first Mem0 alternative. See why local AI memory wins.";
const keywords = "Mem0 alternative, free AI memory, local AI memory, Mem0 vs SuperLocalMemory, Zep alternative, AI memory comparison, open source AI memory, private AI memory, Mem0 alternative free";

const comparisonFaqs = [
  {
    question: "Is SuperLocalMemory a free alternative to Mem0?",
    answer: "Yes. SuperLocalMemory provides similar AI memory capabilities to Mem0 but is completely free, open source (MIT license), and runs 100% locally. Unlike Mem0's $19-249/mo cloud-based plans, SuperLocalMemory has no subscriptions, no API costs, and no cloud dependency."
  },
  {
    question: "How does SuperLocalMemory compare to Mem0 for privacy?",
    answer: "SuperLocalMemory stores all data in a local SQLite file on your machine. Zero data leaves your device. Mem0 stores your memories on their cloud servers. For developers working with proprietary code or sensitive information, local storage is fundamentally more private."
  },
  {
    question: "Can I migrate from Mem0 to SuperLocalMemory?",
    answer: "Yes. SuperLocalMemory uses the MCP protocol and works with 17+ AI tools. You can start storing new memories locally immediately. The setup takes under 5 minutes with a single npx command."
  },
  {
    question: "Does SuperLocalMemory work offline?",
    answer: "Yes. Since all data and models run locally (SQLite database + embedded ONNX models), SuperLocalMemory works without any internet connection. Mem0 and Zep require constant internet access."
  },
  {
    question: "Why is SuperLocalMemory free when Mem0 charges $249/month?",
    answer: "SuperLocalMemory runs entirely on your hardware. There are no cloud servers, no API infrastructure, and no ongoing costs to maintain. The local-first architecture eliminates the need for subscription pricing."
  }
];

const features = [
  { name: "Privacy", super: "Air-Gapped (100% Local)", others: "Cloud / Public API" },
  { name: "Cost", super: "Free (Open Source)", others: "$$/mo + Usage Fees" },
  { name: "Latency", super: "<10ms (Local Bus)", others: "200ms+ (Network)" },
  { name: "Data Ownership", super: "You Own Everything", others: "They Train on It" },
  { name: "Offline Capable", super: "Yes, Native", others: "No, Requires Internet" },
  { name: "Context limit", super: "Hardware Dependent", others: "Tier Dependent" },
  { name: "Model Agnostic", super: "Yes (Any Local/Cloud LLM)", others: "Vendor Locked" }
];

const competitors = [
    {
        name: "Pinecone / Weaviate",
        type: "Vector DBs",
        desc: "Great for enterprise scale, but overkill for personal use. Requires setup, hosting costs, and sends vectors to the cloud.",
        cons: ["Expensive at scale", "Cloud-hosted", "Complex Setup"]
    },
    {
        name: "Mem0 Platform",
        type: "Managed Memory",
        desc: "Excellent API but centralized. Your memories live on their servers. Good for apps, bad for personal privacy.",
        cons: ["Data Privacy Risk", "API Costs", "dependency"]
    },
    {
        name: "ChatGPT Memory",
        type: "Built-in Feature",
        desc: "Convenient but locked to OpenAI. You can't use these memories with Claude, local Llama, or your IDE.",
        cons: ["Vendor Lock-in", "Opaque Storage", "Limited Control"]
    }
];
---

<BaseLayout title={title} description={description} keywords={keywords} schemaType="WebPage">
  <Header />
  <FAQSchema faqs={comparisonFaqs} />
  
  <main class="pt-24 pb-24 min-h-screen bg-[var(--color-bg-main)]">

    <div class="container-custom">
      <BreadcrumbSchema items={[
        { name: 'Home', url: 'https://superlocalmemory.com' },
        { name: 'Comparison', url: 'https://superlocalmemory.com/comparison' }
      ]} />
    </div>

    <!-- Hero -->
    <section class="container-custom mb-20 text-center">
      <FadeIn client:load>
        <span class="text-[var(--color-primary)] font-mono text-sm tracking-wider uppercase mb-4 block">Competitive Analysis</span>
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          The Free <span class="text-gradient">Mem0 Alternative</span>
        </h1>
        <p class="text-xl text-[var(--color-text-muted)] max-w-2xl mx-auto">
          Looking for a free, local AI memory solution? SuperLocalMemory gives you everything Mem0 and Zep offer — without the cloud, without the subscription, without the privacy trade-offs.
        </p>
      </FadeIn>
    </section>

    <!-- Comparison Table -->
    <section class="container-custom mb-24">
      <FadeIn client:visible delay={0.2} className="relative">
        <div class="absolute inset-0 bg-gradient-to-b from-[var(--color-primary)]/5 to-transparent rounded-3xl blur-3xl"></div>
        <div class="glass-panel rounded-3xl overflow-hidden border border-white/10 relative z-10">
            
            <!-- Header Grid -->
            <div class="grid grid-cols-1 md:grid-cols-3 p-6 md:p-8 border-b border-white/10 bg-white/5">
                <div class="col-span-1 text-[var(--color-text-muted)] font-mono text-sm uppercase tracking-wider flex items-end">Feature</div>
                <div class="col-span-1 text-center">
                    <div class="inline-flex items-center gap-2 bg-[var(--color-primary)]/10 text-[var(--color-primary)] px-4 py-1 rounded-full border border-[var(--color-primary)]/20 mb-2">
                        <Shield className="w-4 h-4" /> Recommended
                    </div>
                    <div class="text-xl font-bold text-white">SuperLocalMemory</div>
                </div>
                <div class="col-span-1 text-center opacity-60 flex items-end justify-center pb-1">
                    <span class="text-lg font-medium text-white">SaaS Cloud APIs</span>
                </div>
            </div>

            <!-- Rows -->
            <div class="divide-y divide-white/5">
                {features.map((item, i) => (
                    <div class="grid grid-cols-1 md:grid-cols-3 p-6 md:p-8 hover:bg-white/5 transition-colors group">
                        <div class="col-span-1 font-medium text-white flex items-center">{item.name}</div>
                        
                        <div class="col-span-1 text-center flex items-center justify-center gap-2">
                            <span class="font-bold text-[var(--color-primary)] group-hover:text-white transition-colors">{item.super}</span>
                            <Check className="w-4 h-4 text-green-400" />
                        </div>
                        
                        <div class="col-span-1 text-center opacity-60 flex items-center justify-center gap-2 text-[var(--color-text-muted)]">
                            <span>{item.others}</span>
                        </div>
                    </div>
                ))}
            </div>

        </div>
      </FadeIn>
    </section>

    <!-- Competitors Grid -->
    <section class="container-custom">
        <h2 class="text-3xl font-bold mb-12 text-center">Alternatives Analysis</h2>
        <div class="grid md:grid-cols-3 gap-8">
            {competitors.map((comp, index) => (
                <FadeIn client:visible delay={0.3 + (index * 0.1)}>
                    <div class="h-full glass-panel p-8 rounded-2xl border border-white/10 hover:border-white/20 transition-colors flex flex-col">
                        <div class="mb-4">
                            <span class="text-xs font-mono text-[var(--color-text-muted)] bg-white/5 px-2 py-1 rounded border border-white/5">{comp.type}</span>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-4">{comp.name}</h3>
                        <p class="text-[var(--color-text-muted)] text-sm mb-6 flex-grow">
                            {comp.desc}
                        </p>
                        <ul class="space-y-2">
                            {comp.cons.map(con => (
                                <li class="text-sm text-red-300/80 flex items-center gap-2">
                                    <X className="w-4 h-4 text-red-500" /> {con}
                                </li>
                            ))}
                        </ul>
                    </div>
                </FadeIn>
            ))}
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="container-custom py-16">
      <FadeIn client:visible>
        <h2 class="text-3xl font-bold mb-12 text-center">Frequently Asked Questions</h2>
        <div class="max-w-3xl mx-auto space-y-4">
          {comparisonFaqs.map(faq => (
            <details class="group rounded-xl bg-white/5 border border-white/10 overflow-hidden">
              <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-white/5 transition-colors">
                <h3 class="font-semibold text-white pr-4">{faq.question}</h3>
                <span class="text-[var(--color-primary)] shrink-0 transition-transform group-open:rotate-45 text-xl">+</span>
              </summary>
              <div class="px-6 pb-6 text-[var(--color-text-muted)] leading-relaxed">
                {faq.answer}
              </div>
            </details>
          ))}
        </div>
      </FadeIn>
    </section>

    <!-- Bottom CTA -->
    <section class="container-custom text-center py-24">
        <FadeIn client:visible>
            <div class="max-w-3xl mx-auto glass-panel p-12 rounded-3xl border border-[var(--color-primary)]/20 bg-gradient-to-b from-[var(--color-bg-secondary)] to-[var(--color-bg-main)]">
                <Lock className="w-12 h-12 text-[var(--color-primary)] mx-auto mb-6" />
                <h2 class="text-3xl font-bold mb-6">Your data is yours. Period.</h2>
                <p class="text-[var(--color-text-muted)] mb-8 text-lg">
                    SuperLocalMemory was built because we didn't want to send our private journals, specialized codebases, and medical data to a VC-backed API.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="/" class="glass-button">
                        Start Local — It's Free
                    </a>
                    <a href="/pricing" class="px-6 py-3 rounded-full border border-white/20 hover:bg-white/5 transition-colors">
                        See Pricing
                    </a>
                </div>
            </div>
        </FadeIn>
    </section>

  </main>
  <Footer />
</BaseLayout>
