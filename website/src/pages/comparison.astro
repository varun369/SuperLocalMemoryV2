      <!-- Privacy & Security -->
      <h2 style="margin-bottom: 1.5rem;">Privacy & Security</h2>
      <div style="overflow-x: auto; margin-bottom: 3rem;">
        <table>
          <thead>
            <tr>
              <th>Feature</th>
              <th>SuperLocalMemory V2</th>
              <th>Mem0</th>
              <th>Zep</th>
              <th>Khoj</th>
              <th>Letta</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><strong>100% Local</strong></td>
              <td><span class="badge badge-success">✅</span></td>
              <td>❌</td>
              <td>❌</td>
              <td>⚠️ Partial</td>
              <td>✅</td>
            </tr>
            <tr>
              <td><strong>No External API</strong></td>
              <td><span class="badge badge-success">✅</span></td>
              <td>❌</td>
              <td>❌</td>
              <td>⚠️ Optional</td>
              <td>✅</td>
            </tr>
            <tr>
              <td><strong>No Telemetry</strong></td>
              <td><span class="badge badge-success">✅</span></td>
              <td>❌</td>
              <td>❌</td>
              <td>✅</td>
              <td>✅</td>
            </tr>
            <tr>
              <td><strong>Self-Hosted</strong></td>
              <td><span class="badge badge-success">✅</span></td>
              <td>⚠️ Enterprise only</td>
              <td>⚠️ Enterprise only</td>
              <td>✅</td>
              <td>✅</td>
            </tr>
            <tr>
              <td><strong>GDPR Compliant</strong></td>
              <td><span class="badge badge-success">✅ Inherent</span></td>
              <td>⚠️ Requires config</td>
              <td>⚠️ Requires config</td>
              <td>✅</td>
              <td>✅</td>
            </tr>
            <tr>
              <td><strong>HIPAA Ready</strong></td>
              <td><span class="badge badge-success">✅</span></td>
