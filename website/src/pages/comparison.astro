            <tr>
              <td><strong>Knowledge Graphs</strong></td>
              <td><span class="badge badge-success">✅ Leiden</span></td>
              <td>✅ Basic</td>
              <td>✅ Neo4j</td>
              <td>❌</td>
            </tr>
            <tr>
              <td><strong>Multi-Profile</strong></td>
              <td><span class="badge badge-success">✅ Unlimited</span></td>
              <td>Per-user only</td>
              <td>Per-user only</td>
              <td>❌</td>
            </tr>
            <tr>
              <td><strong>Compression</strong></td>
              <td><span class="badge badge-success">✅ 3-tier</span></td>
              <td>❌</td>
              <td>❌</td>
              <td>❌</td>
            </tr>
            <tr>
              <td><strong>Zero Setup</strong></td>
              <td><span class="badge badge-success">✅ 5 min</span></td>
              <td>❌</td>
              <td>❌</td>
              <td>❌</td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- IDE Integration -->
      <h2 style="margin-bottom: 1.5rem;">IDE Integration</h2>
