      <!-- Performance -->
      <h2 style="margin-bottom: 1.5rem;">Performance Benchmarks</h2>
      <div style="overflow-x: auto; margin-bottom: 3rem;">
        <table>
          <thead>
            <tr>
              <th>Metric</th>
              <th>SuperLocalMemory V2</th>
              <th>Mem0</th>
              <th>Zep</th>
              <th>Khoj</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><strong>Search Latency</strong></td>
              <td><span class="badge badge-success">45-80ms</span></td>
              <td>200-500ms</td>
              <td>100-300ms</td>
              <td>500-1000ms</td>
            </tr>
            <tr>
              <td><strong>Save Latency</strong></td>
              <td><span class="badge badge-success">&lt; 10ms</span></td>
              <td>100-200ms</td>
              <td>100-200ms</td>
              <td>200-400ms</td>
            </tr>
            <tr>
              <td><strong>Offline Capable</strong></td>
              <td><span class="badge badge-success">✅ Yes</span></td>
              <td>❌ No</td>
              <td>❌ No</td>
              <td>⚠️ Partial</td>
            </tr>
            <tr>
              <td><strong>Scalability</strong></td>
              <td>5,000+ memories (local)</td>
              <td>Unlimited (cloud)</td>
              <td>Unlimited (cloud)</td>
