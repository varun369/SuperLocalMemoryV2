---
interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  items?: BreadcrumbItem[];
}

const pathname = Astro.url.pathname;
const siteUrl = 'https://superlocalmemory.com';

// Auto-generate breadcrumbs from URL path if no items provided
function generateBreadcrumbs(path: string): BreadcrumbItem[] {
  const crumbs: BreadcrumbItem[] = [{ name: 'Home', url: siteUrl }];

  const segments = path.split('/').filter(Boolean);
  let currentPath = '';

  for (const segment of segments) {
    currentPath += `/${segment}`;
    const name = segment
      .replace(/-/g, ' ')
      .replace(/\b\w/g, c => c.toUpperCase());
    crumbs.push({ name, url: `${siteUrl}${currentPath}` });
  }

  return crumbs;
}

const items = Astro.props.items || generateBreadcrumbs(pathname);

const schema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": items.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url
  }))
};
---

{items.length > 1 && (
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
)}

{items.length > 1 && (
  <nav aria-label="Breadcrumb" class="text-sm text-[var(--color-text-muted)] mb-8">
    <ol class="flex flex-wrap items-center gap-1.5">
      {items.map((item, i) => (
        <li class="flex items-center gap-1.5">
          {i > 0 && <span class="text-white/20">/</span>}
          {i === items.length - 1 ? (
            <span class="text-white/60">{item.name}</span>
          ) : (
            <a href={item.url.replace(siteUrl, '') || '/'} class="hover:text-[var(--color-primary)] transition-colors">
              {item.name}
            </a>
          )}
        </li>
      ))}
    </ol>
  </nav>
)}
