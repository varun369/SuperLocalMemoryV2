---
interface Props {
  number: number;
  title: string;
}

const { number, title } = Astro.props;
---

<div class="step-list">
  <div class="step-header">
    <div class="step-number">
      <span>{number}</span>
    </div>
    <h3 class="step-title">{title}</h3>
  </div>
  <div class="step-content">
    <slot />
  </div>
</div>

<style>
  .step-list {
    position: relative;
    padding-left: 3.5rem;
    margin: 2rem 0;
    padding-bottom: 1rem;
  }

  .step-list::before {
    content: '';
    position: absolute;
    left: 1.125rem;
    top: 2.5rem;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
  }

  .step-list:last-of-type::before {
    display: none;
  }

  .step-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .step-number {
    position: absolute;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.25rem;
    height: 2.25rem;
    background: var(--color-accent);
    color: white;
    border-radius: 50%;
    font-size: 1rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .step-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .step-content {
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  .step-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .step-content :global(pre) {
    margin-top: 0.75rem;
    margin-bottom: 1rem;
  }

  .step-content :global(h4) {
    color: var(--color-text);
    font-size: 1.1rem;
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
  }
</style>
