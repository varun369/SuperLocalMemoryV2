---
import { FadeIn } from '../ui/Motion';
import { Terminal, Download, Apple, Monitor, Command } from 'lucide-react';
---

<section id="quickstart" class="py-12 border-b border-white/5 relative bg-white/5">
    <div class="container-custom">
        <FadeIn client:visible>
            <div class="max-w-4xl mx-auto">
                <div class="text-center mb-8">
                    <h2 class="text-3xl font-bold mb-4">Install in One Command</h2>
                    <p class="text-[var(--color-text-muted)]">Auto-detects and configures 17+ AI tools. Requires Node.js 18+.</p>
                </div>

                <!-- Command Box -->
                <div class="glass-panel p-6 rounded-2xl border border-white/10 flex flex-col md:flex-row items-center gap-6 mb-12 bg-black/40">
                    <div class="flex-1 w-full relative group">
                        <div class="absolute -inset-1 bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-accent)] rounded-lg opacity-20 blur group-hover:opacity-40 transition-opacity"></div>
                        <div class="relative bg-black rounded-lg border border-white/10 p-4 font-mono text-xs sm:text-sm md:text-base text-green-400 flex justify-between items-center">
                            <span class="mr-4">$ npm install -g superlocalmemory</span>
                            <button class="p-2 hover:bg-white/10 rounded-md transition-colors text-white/50 hover:text-white" aria-label="Copy command">
                                <Command className="w-4 h-4" />
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Downloads Grid -->
                <h3 class="text-xl font-bold text-center mb-6">Or download platform-specific installer</h3>
                <div class="grid md:grid-cols-3 gap-6">
                    
                    <!-- MacOS -->
                    <a href="https://github.com/varun369/SuperLocalMemoryV2/releases/latest" target="_blank" rel="noopener" class="group relative p-6 rounded-xl border border-white/10 bg-[var(--color-bg-card)] hover:bg-white/5 transition-all hover:-translate-y-1">
                        <div class="flex flex-col items-center">
                            <Apple className="w-10 h-10 mb-4 text-white" />
                            <h4 class="font-bold text-lg mb-1">macOS</h4>
                            <span class="text-xs text-[var(--color-text-muted)] group-hover:text-[var(--color-primary)] transition-colors flex items-center gap-1">
                                <Download className="w-3 h-3" /> Download DMG
                            </span>
                        </div>
                    </a>

                    <!-- Windows -->
                    <a href="https://github.com/varun369/SuperLocalMemoryV2/blob/main/docs/WINDOWS-INSTALL-README.txt" target="_blank" rel="noopener" class="group relative p-6 rounded-xl border border-white/10 bg-[var(--color-bg-card)] hover:bg-white/5 transition-all hover:-translate-y-1">
                        <div class="flex flex-col items-center">
                            <Monitor className="w-10 h-10 mb-4 text-blue-400" />
                            <h4 class="font-bold text-lg mb-1">Windows</h4>
                            <span class="text-xs text-[var(--color-text-muted)] group-hover:text-blue-400 transition-colors">Install Guide</span>
                        </div>
                    </a>

                    <!-- Linux -->
                    <a href="https://github.com/varun369/SuperLocalMemoryV2/blob/main/docs/MCP-MANUAL-SETUP.md" target="_blank" rel="noopener" class="group relative p-6 rounded-xl border border-white/10 bg-[var(--color-bg-card)] hover:bg-white/5 transition-all hover:-translate-y-1">
                        <div class="flex flex-col items-center">
                            <Terminal className="w-10 h-10 mb-4 text-orange-400" />
                            <h4 class="font-bold text-lg mb-1">Linux / Manual</h4>
                            <span class="text-xs text-[var(--color-text-muted)] group-hover:text-orange-400 transition-colors">Install Guide</span>
                        </div>
                    </a>

                </div>
            </div>
        </FadeIn>
    </div>
</section>
