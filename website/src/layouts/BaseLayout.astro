---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/branding/icon-white-32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/branding/icon-white-16.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="/assets/branding/icon-white-192.png" />
    <link rel="icon" type="image/svg+xml" href="/assets/branding/icon-white.svg" />
    <link rel="alternate" type="application/rss+xml" title="SuperLocalMemory V2 Blog" href="/rss.xml" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://superlocalmemory.com/assets/social-preview.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="SuperLocalMemory V2 - Your AI Finally Remembers You" />
    <meta property="og:site_name" content="SuperLocalMemory V2" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://superlocalmemory.com/assets/social-preview.png" />
    <meta property="twitter:image:alt" content="SuperLocalMemory V2 - Your AI Finally Remembers You" />
    <meta property="twitter:creator" content="@varun369" />
    <meta property="twitter:site" content="@varun369" />

    <!-- SEO Keywords -->
    <meta name="keywords" content="local AI memory, claude memory extension, AI memory system free, alternative to Mem0, alternative to Zep, MCP integration, Model Context Protocol, Cursor IDE memory, Windsurf memory, VS Code AI memory, agentic IDE memory, AI coding assistant memory, persistent AI context, local first developer tools, knowledge graph AI, pattern learning AI, vibe coding memory, AI agent memory 2026, open source MCP server, free AI memory tool, GDPR compliant AI memory, codex, github copilot, gemini cli, jetbrains, chatgpt, openai, chatgpt-connector, chatgpt MCP memory, openai MCP integration, 17 IDEs supported, adaptive learning AI, local machine learning, GDPR AI memory, LightGBM ranking, privacy-first AI, behavioral learning local" />
    <meta name="author" content="Varun Pratap Bhardwaj" />

    <!-- Robots -->
    <meta name="robots" content="index, follow" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "SuperLocalMemory V2",
        "applicationCategory": "DeveloperApplication",
        "operatingSystem": "macOS, Linux, Windows",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD"
        },
        "author": {
          "@type": "Person",
          "name": "Varun Pratap Bhardwaj",
