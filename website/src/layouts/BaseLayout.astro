        "sameAs": [
          "https://github.com/varun369/SuperLocalMemoryV2",
          "https://www.npmjs.com/package/superlocalmemory"
        ],
        "featureList": [
          "100% Local - all data stays on your machine",
          "100% Free - no usage limits, no subscriptions",
          "17+ IDE integrations (Claude Desktop, Cursor, Windsurf, VS Code)",
